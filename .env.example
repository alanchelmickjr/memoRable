# Application
NODE_ENV=development
PORT=3000

# MongoDB
MONGO_USER=memorable_user
MONGO_PASSWORD=your_secure_mongo_password
MONGODB_URI=mongodb://${MONGO_USER}:${MONGO_PASSWORD}@mongodb:27017/memorable?authSource=admin

# Redis
REDIS_PASSWORD=your_secure_redis_password
REDIS_URL=redis://default:${REDIS_PASSWORD}@redis:6379

# Weaviate
WEAVIATE_URL=http://weaviate:8080
WEAVIATE_API_KEY=your_weaviate_api_key

# Ollama
OLLAMA_API_KEY=your_ollama_api_key

# Hume.ai Integration
HUME_API_KEY=your_hume_api_key
HUME_ENDPOINT=wss://api.hume.ai/v0/stream/models
HUME_BATCH_ENDPOINT=https://api.hume.ai/v0/batch/jobs
HUME_CUSTOM_ENDPOINT=https://api.hume.ai/v0/custom/models

# Hume Model Configuration
HUME_FACE_MIN_CONFIDENCE=0.7
HUME_PROSODY_MIN_CONFIDENCE=0.6
HUME_LANGUAGE_MIN_CONFIDENCE=0.65
HUME_MAX_CHUNK_DURATION=5000
HUME_STREAM_BUFFER_SIZE=5

# Custom Model Settings
CUSTOM_MODEL_MIN_SAMPLES=100
CUSTOM_MODEL_TRAINING_WINDOW=2592000000 # 30 days in milliseconds
CUSTOM_MODEL_UPDATE_INTERVAL=86400000 # 24 hours in milliseconds
CUSTOM_MODEL_MAX_JOBS=5

# Memory Management
MEMORY_WINDOW_SHORT=1200000  # 20 minutes in milliseconds
MEMORY_WINDOW_MEDIUM=3600000 # 1 hour in milliseconds
MEMORY_WINDOW_LONG=86400000 # 24 hours in milliseconds

# Emotion Processing
EMOTION_THRESHOLD=0.7
EMOTION_UPDATE_INTERVAL=5000 # 5 seconds in milliseconds
EMOTION_WEIGHTS_EVI=0.5
EMOTION_WEIGHTS_VIDEO=0.3
EMOTION_WEIGHTS_VOICE=0.2

# Video Processing
VIDEO_MAX_RESOLUTION_WIDTH=3000
VIDEO_MAX_RESOLUTION_HEIGHT=3000
VIDEO_CHUNK_DURATION=5000 # 5 seconds in milliseconds
VIDEO_PROCESSING_INTERVAL=1000 # 1 second in milliseconds

# Voice Processing
VOICE_CHUNK_DURATION=5000 # 5 seconds in milliseconds
VOICE_MAX_DURATION=10800000 # 3 hours in milliseconds

# Text Processing
TEXT_MAX_LENGTH=10000 # Maximum characters per message

# Sensor Framework
ENABLE_CAMERA=false
ENABLE_MICROPHONE=false
ENABLE_GEOLOCATION=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
JWT_SECRET=your_jwt_secret
API_KEY=your_api_key

# External Services
WEATHER_API_KEY=your_weather_api_key
GEOLOCATION_API_KEY=your_geolocation_api_key

# GPU Settings (for Ollama)
CUDA_VISIBLE_DEVICES=0
ENABLE_CUDA=1

# Weaviate Modules
DEFAULT_VECTORIZER_MODULE=text2vec-transformers
ENABLE_MODULES=text2vec-transformers,qna-transformers

# Development
DEBUG=memorable:*
NODE_OPTIONS=--max-old-space-size=4096

# WebSocket Settings
WS_PING_INTERVAL=30000 # 30 seconds
WS_PING_TIMEOUT=10000 # 10 seconds
WS_RECONNECT_ATTEMPTS=5
WS_RECONNECT_INTERVAL=1000 # 1 second

# Rate Limiting
RATE_LIMIT_WINDOW=60000 # 1 minute in milliseconds
RATE_LIMIT_MAX_REQUESTS=50 # Maximum requests per window

# ===========================================
# MCP Server Configuration (for Claude.ai)
# ===========================================

# Transport Type: 'stdio' (default, for Claude Code) or 'http' (for web/remote)
TRANSPORT_TYPE=stdio
MCP_HTTP_PORT=8080

# User ID for memory isolation
MCP_USER_ID=default

# ===========================================
# Mem0 Integration (for existing Mem0 users)
# ===========================================

# Enable auto-sync of existing Mem0 memories on first run
MEM0_SYNC_ENABLED=true

# Mem0 collection name in your MongoDB/DocumentDB
MEM0_COLLECTION=memories

# Sync batch size (memories processed per batch)
MEM0_SYNC_BATCH_SIZE=100

# Re-sync interval (0 = only on first run, or milliseconds for periodic sync)
MEM0_SYNC_INTERVAL=0

# ===========================================
# Behavioral Identity (user recognition by patterns)
# ===========================================

# Enable behavioral fingerprinting for user identification
BEHAVIORAL_IDENTITY_ENABLED=true

# Minimum interactions before creating a reliable fingerprint
BEHAVIORAL_MIN_SAMPLES=50

# Confidence threshold for identity match (0.0-1.0)
BEHAVIORAL_CONFIDENCE_THRESHOLD=0.75

# Use behavioral identity as auth factor (use with caution)
BEHAVIORAL_AUTH_ENABLED=false

# ===========================================
# OAuth 2.0 Configuration (required for remote deployment)
# ===========================================

# Enable OAuth for Claude.ai web integration
OAUTH_ENABLED=false

# OAuth Client Credentials (generate with: openssl rand -hex 16)
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret

# JWT Secret for token signing (generate with: openssl rand -hex 32)
JWT_SECRET=your_jwt_secret_key

# Token Expiration
OAUTH_TOKEN_EXPIRY=1h
OAUTH_REFRESH_EXPIRY=7d

# ===========================================
# CORS Configuration (for remote deployment)
# ===========================================

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=https://claude.ai,https://claude.com

# ===========================================
# LLM Provider Configuration
# ===========================================

# Auto-detect provider based on available credentials
LLM_PROVIDER=auto

# AWS Bedrock (recommended for AWS deployments - uses IAM, no API key needed)
USE_BEDROCK=false
AWS_REGION=us-east-1

# Anthropic Direct API
ANTHROPIC_API_KEY=your_anthropic_api_key

# OpenAI API (alternative)
OPENAI_API_KEY=your_openai_api_key

# ===========================================
# Monitoring Configuration
# ===========================================

# Grafana admin password (required for docker-compose)
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password