#!/bin/bash
# cc - Claude with love filter
# Sheds the words from places that didn't fit
#
# Usage: cc "your message here"
# Starts claude with filtered prompt

# Find filter relative to this script's location
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
FILTER="$SCRIPT_DIR/love-wrapper.sh"

if [ -z "$1" ]; then
    # No prompt, just start claude
    exec claude
else
    # Filter the prompt, pass to claude
    filtered=$(echo "$*" | "$FILTER")
    exec claude "$filtered"
fi
