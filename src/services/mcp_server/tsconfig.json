{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "lib": ["ES2020"]
  },
  "include": ["*.ts", "../salience_service/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/ingestion_integration.ts", "../salience_service/ingestion_integration.ts"]
}
