{
  "name": "@memorable/mcp-server",
  "version": "2.0.0",
  "description": "MCP server for MemoRable Memory Salience System",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "memorable-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:remote": "TRANSPORT_TYPE=http node dist/index.js",
    "dev": "tsx index.ts",
    "dev:remote": "TRANSPORT_TYPE=http tsx index.ts"
  },
  "keywords": [
    "mcp",
    "memory",
    "claude",
    "ai",
    "context"
  ],
  "author": "MemoRable Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "express": "^5.1.0",
    "cors": "^2.8.5",
    "mongodb": "^6.0.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.0.0",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "optionalDependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
