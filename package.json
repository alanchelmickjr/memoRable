{
  "name": "memorable",
  "version": "1.0.0",
  "description": "An AI memory system enabling personalized, context-aware interactions through advanced memory management and emotional intelligence",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write 'src/**/*.js'",
    "setup": "node scripts/setup.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v",
    "docker:rebuild": "docker-compose build --no-cache",
    "prepare": "husky install && npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "ai",
    "memory-system",
    "emotional-intelligence",
    "context-aware",
    "multi-modal",
    "vector-database",
    "machine-learning",
    "hume-ai",
    "emotion-detection",
    "real-time-processing"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@tensorflow/tfjs-node": "^5.0.0",
    "dotenv": "^16.0.0",
    "mongodb": "^6.0.0",
    "redis": "^4.6.0",
    "weaviate-client": "^2.14.0",
    "ollama": "^1.0.0",
    "node-nlp": "^4.27.0",
    "face-api.js": "^0.22.2",
    "node-webcam": "^0.8.1",
    "node-microphone": "^0.1.5",
    "geolib": "^3.3.4",
    "moment": "^2.29.4",
    "winston": "^3.10.0",
    "joi": "^17.9.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@rollup/plugin-babel": "^6.0.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "rollup": "^3.25.0",
    "rollup-plugin-terser": "^7.0.2"
  },
  "peerDependencies": {
    "@tensorflow/tfjs-node": ">=5.0.0",
    "mongodb": ">=6.0.0",
    "redis": ">=4.6.0",
    "weaviate-client": ">=2.14.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/memorable.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/memorable/issues"
  },
  "homepage": "https://github.com/yourusername/memorable#readme",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
