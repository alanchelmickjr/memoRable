{
  "name": "memorable",
  "version": "1.0.0",
  "description": "An AI memory system enabling personalized, context-aware interactions through advanced memory management and emotional intelligence",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write 'src/**/*.js'",
    "setup": "node scripts/setup.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v",
    "docker:rebuild": "docker-compose build --no-cache",
    "prepare": "husky install"
  },
  "keywords": [
    "ai",
    "memory-system",
    "emotional-intelligence",
    "context-aware",
    "multi-modal",
    "vector-database",
    "machine-learning"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@tensorflow/tfjs-node": "^5.0.0",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "mongodb": "^6.0.0",
    "redis": "^4.6.0",
    "weaviate-client": "^2.14.0",
    "ollama": "^1.0.0",
    "node-nlp": "^4.27.0",
    "face-api.js": "^0.22.2",
    "node-webcam": "^0.8.1",
    "node-microphone": "^0.1.5",
    "geolib": "^3.3.4",
    "moment": "^2.29.4",
    "winston": "^3.10.0",
    "joi": "^17.9.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "body-parser": "^1.20.0",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.0",
    "fluent-ffmpeg": "^2.1.2",
    "node-fetch": "^3.3.0",
    "ws": "^8.13.0",
    "socket.io": "^4.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "supertest": "^6.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "extensionsToTreatAsEsm": [
      ".js"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
